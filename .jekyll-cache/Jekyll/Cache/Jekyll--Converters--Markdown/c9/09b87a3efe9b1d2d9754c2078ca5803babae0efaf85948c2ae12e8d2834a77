- (void)pinch:(UIPinchGestureRecognizer *)sender{
    
    CGFloat  scale = sender.scale;
    self.imageView.transform = CGAffineTransformScale(self.imageView.transform, scale, scale);
    [sender setScale:1];
   
}

- (void)rotaion:(UIRotationGestureRecognizer *)sender{
    //è·å–æ—‹è½¬å¼§åº¦
